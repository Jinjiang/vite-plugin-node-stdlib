{
  "name": "vite-plugin-stdlib",
  "version": "0.0.1",
  "description": "A Vite plugin to polyfill Node.js standard library modules for browser usage.",
  "keywords": [
    "vite",
    "plugin",
    "node",
    "stdlib",
    "browser"
  ],
  "author": "Jinjiang <zhaojinjiang@me.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jinjiang/vite-plugin-stdlib.git"
  },
  "bugs": {
    "url": "https://github.com/Jinjiang/vite-plugin-stdlib/issues"
  },
  "homepage": "https://github.com/Jinjiang/vite-plugin-stdlib#readme",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./buffer": {
      "import": "./injects/buffer.js",
      "require": "./injects/buffer.js"
    },
    "./process": {
      "import": "./injects/process.js",
      "require": "./injects/process.js"
    },
    "./global": {
      "import": "./injects/global.js",
      "require": "./injects/global.js"
    }
  },
  "files": [
    "dist",
    "injects"
  ],
  "scripts": {
    "dev": "rm -rf node_modules/.vite && vite",
    "demo:serve": "vite",
    "demo:build": "vite build",
    "demo:preview": "vite build && vite preview",
    "inject": "vite --config vite.config.injects.ts build",
    "build": "tsc -b tsconfig.src.json",
    "watch": "tsc -b --watch tsconfig.src.json",
    "type-check": "tsc --noEmit",
    "prepublish": "pnpm inject && pnpm build"
  },
  "peerDependencies": {
    "vite": "8.0.0-beta.11"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "typescript": "^5.9.3",
    "vite": "8.0.0-beta.11"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "node-stdlib-browser": "^1.3.1",
    "process": "^0.11.10"
  }
}
